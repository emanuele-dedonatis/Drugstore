<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddDrugFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/package_image"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_not_available"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:background="@color/white"    >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/screen_margin">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_margin">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_label_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:tint="@color/secondary_text"/>

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/description_et"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:hint="@string/package_description"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        />


                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_margin">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_event_note_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:tint="@color/secondary_text"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expiration_date_et"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:singleLine="true"
                        android:inputType="date"
                        android:hint="@string/package_expiration"
                        android:imeOptions="actionNext"
                        />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_margin">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_view_comfy_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:tint="@color/secondary_text"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/units_et"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:singleLine="true"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:inputType="numberDecimal"
                        android:hint="@string/package_units"
                        android:imeOptions="actionNext"
                        />


                </LinearLayout>


                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            app:fabSize="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/package_image"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:src="@drawable/ic_menu_camera"
            android:tint="@color/white"/>
    </android.support.design.widget.CoordinatorLayout >
    </ScrollView>
</FrameLayout>
